{
  "lerna": "3.22.1",
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "registry": "http://localhost:4873"
    },
    "ignoreChanges": [
      "**/CHANGELOG.md",
      "**/node_modules/**",
      "**/tests/**",
      "**/__tests__/**"
    ],
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "conventionalcommits",
      "allowBranch": "master"
    }
  }
}
