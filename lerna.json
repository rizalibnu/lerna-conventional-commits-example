{
  "lerna": "3.22.1",
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "registry": "http://localhost:4873"
    },
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "@my-scope/conventional-changelog-rizalibnu",
      "allowBranch": "master",
      "ignoreChanges": [
        "**/CHANGELOG.md",
        "**/node_modules/**",
        "**/tests/**",
        "**/__tests__/**"
      ]
    }
  }
}
